<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TornPropertyManager.ApiKeyWindow"
        Width="400" Height="220"
        Title="Torn API Key">
  <StackPanel Margin="20" Spacing="10">
    <TextBlock Text="Enter your Torn API key" FontSize="18" Margin="0,0,0,10"/>
    <TextBlock Text="The key will be stored securely on this machine and used to access the Torn API." 
               TextWrapping="Wrap" />

    <TextBox Name="ApiKeyTextBox"
             Watermark="Paste your Torn API key here"/>

    <TextBlock Name="StatusText"
               Foreground="Red"
               TextWrapping="Wrap"/>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
      <Button Name="SaveButton"
              Width="100"
              Content="Save"
              Click="SaveButton_OnClick"/>
    </StackPanel>
  </StackPanel>
</Window>
